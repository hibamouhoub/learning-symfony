{% extends 'base.html.twig' %}

{% block body %}
<br>
    <div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
	<div class="card card-body">
	<h2 class="text-center mb-3"><i class="fa fa-plus"></i> Register</h2><hr>
    
    {% if Error is defined %}
    <div class="alert alert-dismissible alert-primary">
